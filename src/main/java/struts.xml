<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">

        <action name="login" class="action.UserAction" method="login">
            <result name="input">login.jsp</result>
            <result name="error">error.jsp</result>
            <result name="success">welcome.jsp</result>
        </action>

        <action name="signUp" class="action.UserAction" method="singUp">
            <result name="success">welcome.jsp</result>
        </action>

        <action name="register" class="action.RegistrationAction" method="register">
            <result name="success">welcome.jsp</result>
        </action>

        <action name="unRegister" class="action.RegistrationAction" method="unRegister">
            <result name="success">welcome.jsp</result>
        </action>

        <action name="createPatient" class="action.PersonAction" method="create">
            <result name="success">welcome.jsp</result>
        </action>

        <action name="modifyPatient" class="action.PersonAction" method="modify">
            <result name="success">welcome.jsp</result>
        </action>

        <action name="deletePatient" class="action.PersonAction" method="delete">
            <result name="success">welcome.jsp</result>
        </action>




    </package>

</struts>